<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-site-verification" content="d7RxizAI0Q970wnOxSGhu-3t3GrITPLr7G4Ph8UtrkE" />
    <title>Watch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <script type='text/javascript' src='//pl18220095.highcpmrevenuenetwork.com/e2/3f/fb/e23ffb459e4b93dea04ac95f38ed75ce.js'></script>

    <link rel="stylesheet" href="css/streaming.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <div class="container-fluid d-flex">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <p class="nav-link" aria-current="page" href="#">AnimeARK</p>
                    </li>
                </ul>
                <form class="d-flex" role="search" action="/searchAnime" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                    <button type="submit"><i class="bi bi-search"></i></button>
                </form>
            </div>
        </div>
    </nav>

    <section class="episodeInfo">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1><%= dataDetail.animeTitle %></h1>
                    <h3>Episode :  <%= episodeNum %></h3>
                </div>
            </div>
        </div>
    </section>

    <div class="streamingFrame">
        <iframe src="<%= data %>" frameborder="0"></iframe>
    </div>

    <section class="episode">
        <div class="container">
            <h4>Episode</h4>
            <div class="row">
                <% dataEpisode.forEach(e => { %>
                    <div class="col-2 col-lg-1 genreButton d-flex align-items-center justify-content-center">
                        <form action="/watch" method="post">
                            <input type="hidden" name="detailId" value="<%= detailId %>">
                            <input type="hidden" name="episodeId" value="<%= e.episodeId %>">
                            <input type="hidden" name="episodeNum" value="<%= e.episodeNum %>">
                            <button type="submit"><%= e.episodeNum %></button>
                        </form>
                    </div>
                <% }) %> 
            </div>
        </div>
    </section>

    <script src="js/streaming.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
