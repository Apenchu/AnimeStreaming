    <link rel="stylesheet" href="css/detail.css">
  </head>
  <body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <div class="container-fluid d-flex">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <p class="nav-link" aria-current="page" href="#"><a href="">AnimeARK</a></p>
                    </li>
                </ul>
                <form class="d-flex" role="search" action="/searchAnime" method="post">
                    <a href=""><input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search"></a>
                    <a href=""><button type="submit"><i class="bi bi-search"></i></button></a>
                </form>
            </div>
        </div>
    </nav>

    <section class="detail">
        <div class="container">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center justify-content-center">
                    <div class="imgCard d-flex align-items-end justify-content-center" style="background-image: url('<%= data.animeImg %>');">
                        <form action="/watch" method="post">
                            <a href=""><button type="submit">Watch</button></a>
                        </form>
                    </div>
                </div>
                <div class="col-md-6 d-flex align-items-center justify-content-center">
                    <div class="descCard">
                        <h1><%= data.animeTitle %></h1>
                        <p><%= data.synopsis %></p>
                        <p>Released Date    : <%= data.releasedDate %></p>
                        <p>Genre            : <% dataGenre.forEach(e => { %> <span><%= e %></span>, <% }) %></p>
                        <p>Status           : <%= data.status %></p>
                        <p>Last Episode     : <%= data.totalEpisodes %></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
    <section class="episode">
        <div class="container">
            <h4>Episode</h4>
            <div class="row">
                <% dataEpisode.forEach(e => { %>
                    <div class="col-2 col-lg-1 genreButton d-flex align-items-center justify-content-center">
                        <form action="/watch" method="post">
                            <input type="hidden" name="detailId" value="<%= detailId %>">
                            <input type="hidden" name="episodeId" value="<%= e.episodeId %>">
                            <input type="hidden" name="episodeNum" value="<%= e.episodeNum %>">
                            <a href=""><button type="submit"><%= e.episodeNum %></button></a>
                        </form>
                    </div>
                <% }) %> 
            </div>
        </div>
    </section>

